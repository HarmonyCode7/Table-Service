<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-170dp" />

    <LinearLayout
        android:id="@+id/linear_firstTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="340dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_textedit"
                android:drawableEnd="@drawable/ic_baseline_search_24"
                android:drawableTint="#d8d8d8"
                android:hint="search cafes"
                android:textColor="@color/black"
                android:textColorHint="#d8d8d8"
                android:textSize="18sp"
                android:maxLines="1"
                android:textDirection="ltr"
                android:padding="20dp"/>

            <ImageButton
                android:id="@+id/button_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_black_button"
                android:src="@drawable/ic_filter"
                app:tint="@color/gold"
                android:padding="20dp"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/playfair"
        android:text="Nearby Places"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_firstTop" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_black_button"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_nearby">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/cosy_table" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair"
                android:text="Cosy Place"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"/>

        </LinearLayout>


    </FrameLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_black_button"
    android:backgroundTint="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="9dp">

        <ImageButton
            android:id="@+id/image_button_account"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_account"
            android:padding="10dp"
            android:background="@drawable/rounded_black_button"
            app:tint="@color/white"
            android:layout_margin="4dp"
            />




    </LinearLayout>

</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>